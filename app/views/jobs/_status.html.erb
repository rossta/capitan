<% if params[:html] %>
  <div class='build_statuses'>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th class="number">Number</th>
        <th class="branch">Branch</th>
        <th class="revision">Revision</th>
        <th class="status">Status</th>
        <th class="built_at">Built at</th>
        <th class="synced_at">Synced at</th>
      </tr>
    </thead>
    <tbody>
      <%- job.branch_builds.each do |build| -%>
        <tr>
          <td class="number"><%= build.number %></td>
          <td class="branch"><%= link_to build.branch_display_name, [job, build.branch] %></td>
          <td class="revision"><%= build.display_revision %></td>
          <td class="status <%= build.display_result %>"><%= build.display_result %></td>
          <td class="built_at"><%= build.built_at %></td>
          <td class="synced_at"><%= build.synced_at %></td>
        </tr>
      <%- end -%>
    </tbody>
  </table>
</div>
<% else %>
  <% content_for :json do %>
    Capitan.Collections.Jobs.add(<%= raw job.to_json %>);
    Capitan.Collections.Builds.add(<%= raw job.branch_builds.to_json %>);
  <% end %>
<% end %>